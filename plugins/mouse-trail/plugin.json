{
  "id": "mouse-trail",
  "name": "鼠标轨迹特效",
  "version": "1.0.0",
  "description": "为鼠标移动添加炫酷的轨迹特效，包括粒子、彩虹、星星等多种效果",
  "author": "Sentra Auto Browser",
  "category": "visual-effects",
  "tags": ["鼠标", "轨迹", "特效", "粒子", "彩虹", "星星", "mouse", "trail", "cursor", "effect"],
  "permissions": ["dom-read", "dom-write", "style-injection", "event-listener"],
  "parameters": [
    {
      "name": "trailType",
      "type": "string",
      "description": "轨迹类型",
      "default": "particles",
      "required": false,
      "options": ["particles", "rainbow", "stars", "fire", "bubbles"]
    },
    {
      "name": "particleCount",
      "type": "number",
      "description": "粒子数量",
      "default": 20,
      "required": false,
      "min": 5,
      "max": 100
    },
    {
      "name": "trailLength",
      "type": "number",
      "description": "轨迹长度(毫秒)",
      "default": 1000,
      "required": false,
      "min": 200,
      "max": 5000
    },
    {
      "name": "colorScheme",
      "type": "string",
      "description": "配色方案",
      "default": "rainbow",
      "required": false,
      "options": ["rainbow", "blue", "red", "green", "purple", "gold"]
    }
  ],
  "enabled": true,
  "autoLoad": false,
  "priority": 2
}
